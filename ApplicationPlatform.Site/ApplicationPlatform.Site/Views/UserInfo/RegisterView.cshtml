@{
    Layout = null;
}

 <div id="CAdiv">
     <div id="CAdiv1">
        <form action='@Url.Action("RegisterView","Account")' method="post">
            <div class="RegTitleClass">
                UserName:
            </div>
            <div>
                <input type="text" id="RegUserNameId" name="RegUserNameId" />
            </div>
            <div class="RegTitleClass">
                Email Address:
            </div>
            <div>
                <input type="text" id="RegEmailId" name="RegEmailId" />
            </div>
            <div style="text-align:right; padding-top:30px;padding-right:54px;">
                <input type="submit" class="easyui-linkbutton" value="Create" onclick="registerUserFun()" />
            </div>
        </form>

     </div>
      
 </div>

<style type="text/css">
    #CAdiv {
        width:100%;
        height:100%;
        background-image:url("../../Images/backgroundPic.jpg");
        background-repeat:repeat;
    
    }

    #CAdiv1 {
        margin-left:60px;
        padding-top:60px;
        border-radius:10px;
    }
    .RegTitleClass {
        font-size:20px;
        font-weight:600;
        font-family:Myriad;
        color:#808080;
    }
</style>

<script type="text/javascript">

    function registerUserFun(){
		var RegUserNameVal = document.getElementById("RegUserNameId");
		var RegUserEmailVal = document.getElementById("RegEmailId");
		
		var tab = $('#midShowId').tabs('getSelected');
		$('#midShowId').tabs('update', {
			tab: tab,
			url:'@Url.Action("RegisterView","Account")'+'?UserName='+RegUserNameVal+'?Email='+RegUserEmailVal,
			options: {
				title: "User Management",
			}
		}
		
	}
   
   
   
    $("#RegEmailId").validatebox({
        required: true,    
        validType: 'email' 
    });

    $("#RegUserNameId").validatebox({
        required: true,
    });
</script>